<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="wrap_content"

    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_container">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/material_click"
            app:mrl_rippleDuration="250"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleAlpha="0.2"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleHover="false"
            android:layout_margin="1dp"
            android:layout_height="@dimen/trailer_height"
            android:layout_width="@dimen/trailer_width">
            <ImageView

                android:scaleType="fitCenter"
                android:id="@+id/trailer_images"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.balysv.materialripple.MaterialRippleLayout>
        <ImageView
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ic_play_circle_filled"
            android:layout_height="@dimen/fab_tool_bar_height"
            android:layout_width="@dimen/fab_tool_bar_height"/>
    </RelativeLayout>
</RelativeLayout>